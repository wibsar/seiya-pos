<Page x:Class="Seiya.InventoryMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Seiya"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="InventoryMainPage">

    <Grid ShowGridLines="True" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Grid.Column="0" Grid.Row="0" Text="Buscar Producto"></TextBox>
        <TextBlock Grid.Column="1" Grid.Row="0"> Producto</TextBlock>
        <DataGrid Grid.Column="0" Grid.Row="1"></DataGrid>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock>ID</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Codigo</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Codigo Alterno</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Proveedor</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Producto Codigo de Peveedor</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Descripcion</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Marca</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Categoria</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Costo</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Moneda de Costo</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Precio</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Moneda de Precio</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Cantidad Minima en Existencia</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Total Vendido</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Cantidad Interna</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Cantidad Vendida</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Cantidad Local Disponible</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Cantidad Total Disponible</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Fecha Ultima Compra</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Fecha Ultima Venta</TextBlock>
                <TextBox>Text</TextBox>
            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row ="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button></Button>
            <Button></Button>
            <Button></Button>
        </StackPanel>
    </Grid>
</Page>
