<Page x:Class="Seiya.PosMenuFramePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Seiya"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance local:PosMenuFramePageViewModel}"
      Title="PosMenuFramePage">

    <Grid Background="White">
        <!-- Need to bind the source to choose page depending on selection-->
        <Frame x:Name="Main" Source="{Binding MenuCurrentPage}" NavigationUIVisibility="Hidden" Margin="-1,0,1.2,0">

        </Frame>
    </Grid>
</Page>
