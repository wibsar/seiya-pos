<Page x:Class="Seiya.EndSalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Seiya"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance local:EndSalesPageViewModel}"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="EndSalesPage"
  >
    <Page.Resources>
        <Style TargetType="Page">
            <Setter Property="Foreground" Value="#2C5066" />
            <Setter Property="FontFamily" Value="/Seiya;component/Resources/Fonts/#Comfortaa"></Setter>
            <Setter Property="Background" Value="White"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="White"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>            
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="/Seiya;component/Resources/Fonts/#Comfortaa"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="/Seiya;component/Resources/Fonts/#Comfortaa"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="Foreground" Value="#2C5066" />
        </Style>
    </Page.Resources>


    <Grid ShowGridLines="false" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- header -->
        <TextBlock Grid.Column="0" Text="CORTE DE CAJA" FontSize="24" VerticalAlignment="Center"></TextBlock>
      

        <!-- Users input for quantities -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="5,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="1.5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <!-- Pesos GRID -->
            <Grid Grid.Column="0" Grid.Row="0" Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" TextAlignment="Center" Background="#FF224458" Foreground="White" Text="(MXN)   PESO" FontSize="18"/>
                <TextBlock Grid.Row="1" TextAlignment="Right" Text="$ 1,000  X   " ></TextBlock>
                <TextBlock Grid.Row="2" TextAlignment="Right" Background="#FFECECEC" Text="$ 500  X   "></TextBlock>
                <TextBlock Grid.Row="3" TextAlignment="Right" Text="$ 200  X   " ></TextBlock>
                <TextBlock Grid.Row="4" TextAlignment="Right" Background="#FFECECEC" Text="$ 100  X   " ></TextBlock>
                <TextBlock Grid.Row="5" TextAlignment="Right" Text="$ 50  X   " ></TextBlock>
                <TextBlock Grid.Row="6" TextAlignment="Right" Background="#FFECECEC" Text="$ 20  X   " ></TextBlock>
                <TextBlock Grid.Row="7" TextAlignment="Right" Text="Monedas " FontWeight="Bold" ></TextBlock>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="0" Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" TextAlignment="Center" Background="#FF224458" Foreground="White" Text="CANTIDAD" FontSize="18"/>
                <TextBox Grid.Row="1" Text="{Binding MxnPeso1000}"></TextBox>
                <TextBox Grid.Row="2" Text="{Binding MxnPeso500}" Background="#FFECECEC"></TextBox>
                <TextBox Grid.Row="3" Text="{Binding MxnPeso200}"></TextBox>
                <TextBox Grid.Row="4" Text="{Binding MxnPeso100}" Background="#FFECECEC"></TextBox>
                <TextBox Grid.Row="5" Text="{Binding MxnPeso50}"></TextBox>
                <TextBox Grid.Row="6" Text="{Binding MxnPeso20}" Background="#FFECECEC"></TextBox>
                <TextBox Grid.Row="7" Text="{Binding MxnPesoCoinsTotal}"></TextBox>
            </Grid>
            <!-- USD panel -->
            <Grid Grid.Column="0" Grid.Row="1" Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" TextAlignment="Center" Background="#FF590C0C" Foreground="White" Text="(USD)   DOLAR" FontSize="18"/>
                <TextBlock Grid.Row="1"  TextAlignment="Right" Text="$ 100  X   "></TextBlock>
                <TextBlock Grid.Row="2"  TextAlignment="Right" Background="#FFECECEC" Text="$ 50  X   "></TextBlock>
                <TextBlock Grid.Row="3"  TextAlignment="Right" Text="$ 20  X   "></TextBlock>
                <TextBlock Grid.Row="4"  TextAlignment="Right" Background="#FFECECEC" Text="$ 10  X   "></TextBlock>
                <TextBlock Grid.Row="5"  TextAlignment="Right" Text="$ 5  X   "></TextBlock>
                <TextBlock Grid.Row="6"  TextAlignment="Right" Background="#FFECECEC" Text="$ 1  X   "></TextBlock>
                <TextBlock Grid.Row="7"  TextAlignment="Right" Text="Monedas " FontWeight="Bold" Foreground="#FF590C0C"></TextBlock>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" TextAlignment="Center" Background="#FF590C0C" Foreground="White" Text="CANTIDAD"/>
                <TextBox Grid.Row="1" Text="{Binding UsdDollar100}"></TextBox>
                <TextBox Grid.Row="2" Text="{Binding UsdDollar50}" Background="#FFECECEC"></TextBox>
                <TextBox Grid.Row="3" Text="{Binding UsdDollar20}"></TextBox>
                <TextBox Grid.Row="4" Text="{Binding UsdDollar10}" Background="#FFECECEC"></TextBox>
                <TextBox Grid.Row="5" Text="{Binding UsdDollar5}"></TextBox>
                <TextBox Grid.Row="6" Text="{Binding UsdDollar1}" Background="#FFECECEC"></TextBox>
                <TextBox Grid.Row="7" Text="{Binding UsdDollarCoinsTotal}"></TextBox>
            </Grid>
        </Grid>

        <!-- Sales data based on sales by type and expenses -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="20,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height=".1*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height=".2*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Efectivo:"></TextBlock>
                <TextBlock Grid.Row="1" Text="Pagos con Tarjeta:" ></TextBlock>
                <TextBlock Grid.Row="2" Text="Pagos con Cheque:" ></TextBlock>
                <TextBlock Grid.Row="3" Text="Pagos por Transferencia:" ></TextBlock>
                <TextBlock Grid.Row="4" Background="#FFD4D4D4" Height="1"></TextBlock>
                <TextBlock Grid.Row="5" Text="Gastos Totales:" ></TextBlock>
                <TextBlock Grid.Row="6" Text="Gastos Efectivo:" ></TextBlock>
                <TextBlock Grid.Row="7" Text="Devoluciones:" ></TextBlock>
                <TextBlock Grid.Row="8" Text="Caja Turno Anterior:"/>
                <TextBlock Grid.Row="9" Text="Total Venta" ></TextBlock>
                <TextBlock Grid.Row="10" Text="Diferencia"/>
                <TextBlock Grid.Row="11" Text="Puntos Usados:" ></TextBlock>
                <TextBlock Grid.Row="12" Text="Caja Chica Nueva" ></TextBlock>

            </Grid>

            <Grid Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height=".1*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height=".2*"></RowDefinition>
                    
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="{Binding CashTotalSales}"></TextBlock>
                <TextBlock Grid.Row="1" Text="{Binding CardTotalSales}"></TextBlock>
                <TextBlock Grid.Row="2" Text="{Binding CheckTotalSales}"></TextBlock>
                <TextBlock Grid.Row="3" Text="{Binding BankTransferTotalSales}"></TextBlock>
                <TextBlock Grid.Row="4" Background="#FFD4D4D4" Height="1"></TextBlock>
                <TextBlock Grid.Row="5" Text="{Binding ExpensesTotal}"></TextBlock>
                <TextBlock Grid.Row="6" Text="{Binding ExpensesCashTotal}"></TextBlock>
                <TextBlock Grid.Row="7" Text="{Binding ReturnsTotal}"></TextBlock>                                          <!-- Agregar Binding -->           
                <TextBlock Grid.Row="8" Text="{Binding RegisterPreviousCash}"></TextBlock>
                <TextBlock Grid.Row="9" Text="{Binding TotalSales}"></TextBlock>
                <TextBlock Grid.Row="10" Text="{Binding Delta}"></TextBlock>
                <TextBlock Grid.Row="11" Text="{Binding PointsTotalUsed}"></TextBlock>
                <TextBox Grid.Row="12" Text="{Binding RegisterNewCash}"></TextBox>

            </Grid>
        </Grid>

        <!-- User Comments field -->
        <Grid Grid.Row="2" Grid.Column="0" Margin="5,5,0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" TextAlignment="Center" Background="#FF0E801E" Foreground="White" Text="COMENTARIOS"></TextBlock>
            <TextBox Grid.Row="1"></TextBox>
        </Grid>

        <!-- Buttons for sales report type -->
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"  Command="{Binding GenerateEndOfDaySalesReportCommand}" CommandParameter="x" BorderBrush="{x:Null}" Background="{x:Null}">
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="/Seiya;component/Resources/Images/Cortex.png"></Image>
                <TextBlock Grid.Row="1" FontFamily="/Seiya;component/Resources/Fonts/#Comfortaa" FontSize="16" HorizontalAlignment="Center" Text="Corte X"></TextBlock>
                </Grid>
            </Button>
            <Button Grid.Column="1" BorderBrush="{x:Null}" Command="{Binding GenerateEndOfDaySalesReportCommand}" CommandParameter="z" Background="{x:Null}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="C:\Projects\seiya-pos\Resources\Images\Cortez.png"></Image>
                    <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="16" Text="Corte Z"></TextBlock>
                </Grid>
            </Button>
                
           
        </Grid>
    </Grid>
</Page>
