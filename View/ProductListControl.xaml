<UserControl x:Class="Seiya.ProductListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Seiya"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Descripcion" HorizontalAlignment="Left"></TextBlock>
            <TextBlock Text="Categoria" HorizontalAlignment="Left"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Price" HorizontalAlignment="Left"></TextBlock>
                <TextBlock Text=" x "></TextBlock>
                <TextBlock Text="Quantity"></TextBlock>
                <TextBlock Text="Total"></TextBlock>
                <Button Content="Edit" HorizontalAlignment="Right"></Button>
            </StackPanel>

        </StackPanel>    
    </Grid>
</UserControl>
