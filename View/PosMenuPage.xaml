                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="C:\Projects\seiya-pos\Resources\Images\Manual.png"></Image>
                <TextBlock Grid.Row="1" Text="Manual"></TextBlock>
            </Grid>
        </Button>
        <Button Grid.Row="3" Grid.Column="3" Command="{Binding ChangePageCommand}" CommandParameter="others" BorderBrush="{x:Null}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="C:\Projects\seiya-pos\Resources\Images\Otros.png"></Image>
                <TextBlock Grid.Row="1" Text="Otros"></TextBlock>
            </Grid>
        </Button>
    </Grid>

</Page>